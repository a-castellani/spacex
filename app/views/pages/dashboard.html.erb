<%= render "/pages/navbardark" %>

<div class="d-flex" data-controller="dashboard">
  <div><div class="menu">
  <div class="container p-4">
  <button><h4 data-action="click->dashboard#fire" >My bookings</h4></button>
  <ul>
    <% @current_user_bookings.each do |booking| %>
      <li><%= link_to booking.spaceship.name, spaceship_path(booking.spaceship), class: 'link'%></li>
    <% end %>
  </ul>
  <div class="menu-separator"><p>-</p></div>
  <h4>My spaceships</h4>
  <ul>
    <% @current_user_spaceships.each do |spaceship| %>
      <%= link_to spaceship.name, spaceship_path(spaceship), class: 'link' %>
    <% end %>
  </ul>
  </div>

</div> </div>

  <div>

    <div class="mt-3 normaldisplay" data-dashboard-target="cards">
      <div class="text-dashboard">
        <h2>My bookings</h2>
      </div>
      <div class="col-md-6 d-flex">
          <% @current_user_bookings.each do |booking| %>
            <div class="card p-3 col-4 m-2 ">
                  <%= render "/pages/bookingcard", booking: booking %>
            </div>
          <% end %>
      </div>

      <div class="separator"><p>h</p></div>

      <div class="text-dashboard">
          <h2>My spaceships</h2>
      </div>
      <div class="col-md-6">
        <%@current_user_spaceships.each do |spaceship| %>
          <div class="card p-3 col-4 m-2 ">
            <%= render "/pages/dashboardcard", spaceship: spaceship %>
           </div>
        <% end %>
      </div>
    </div>

    <div class="individualdisplay mt-3 d-none" data-dashboard-target="booking">
      <% @current_user_bookings.each do |booking| %>
        <div class="m-4">
          <div class="d-flex m-5">
            <div class="photo">
              <% if booking.spaceship.photo.attached?  %>
              <%= cl_image_tag(booking.spaceship.photo.key, crop: :fit, width: 450) %>
              <% else %>
                <%= image_tag('spaceship.jpeg') %>
              <% end %>
            </div>

            <div class="title m-5">
              <h3 class="text-wrap mb-3"><%= booking.spaceship.name %></h3>
              <i class="fa-solid fa-paint-roller mb-1"> <%= booking.spaceship.color %></i>
              <i class="fa-solid fa-chair mb-1"> <%= booking.spaceship.seats %></i>
              <i class="fa-regular fa-calendar-days mb-1"> <%= booking.spaceship.year %></i>
              <div class="booking mt-5">
                <p class="font-weight-bold">Booked: <%= booking.start_date %> - <%= booking.end_date %></p>
                <p class="font-weight-bold">Price: Â£<%= booking.spaceship.price %></p>
              </div>
            </div>
          </div>

          <div class="description m-5">
            <p><%= booking.spaceship.description %></p>
            <%= link_to edit_spaceship_booking_path(booking.spaceship, booking), class: 'btn btn-primary' do %>
              <i class="fa-solid fa-pencil pe-1" style="color: #ffffff;">  Edit</i>
            <% end %>
            <%= link_to booking_path(booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger m-2' do %>
              <i class="fa-regular fa-trash-can pe-1" style="color: #ffffff;">  Delete</i>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>

</div>
