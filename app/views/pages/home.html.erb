<%= render "/pages/navbar" %>

<div class="background">
  <div class="banner">
    <div class="container">
      <h1>SpaceX</h1>
      <h3>Take a trip to the stars</h3>
    </div>
  </div>
    <div class="container mt-3">
      <%= render "search_bar" %>
      <h2>Spaceships</h2>
      <div class="d-flex flex-wrap">
        <%@spaceships.each do |spaceship| %>
          <div class="card p-3 col-4 m-2">
            <%= render "indexcard", spaceship: spaceship %>
            <%= link_to "see details", spaceship_path(spaceship) %>
          </div>
        <% end %>
      </div>
    </div>

</div>
